<div class="container">
  <%= render 'books/error', book: @book %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/profile', user: @user %>
      <%= render 'books/form' %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <% @users.each do |user| %>
        <table>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
          <tr>
            <td><%= image_tag user.get_profile_image(80,80) %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user) %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>