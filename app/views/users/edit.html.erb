<h1>User info</h1>
  <%= form_with model:@user do |f| %>
  
  <div>
    <%= f.label :Name %><br>
    <%= f.text_field :name %>
  </div>
  
  <div>
    Image</br>
     <%= f.file_field :profile_image, accept: "image/*" %>
  </div>
  
  <div>
    <%= f.label :introduction %></br>
    <%= f.text_area :introduction %>
  </div>
  
  <% end %>