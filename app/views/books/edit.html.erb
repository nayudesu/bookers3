<h1>Editing Book</h1>

<%= form_with model:@book do |f| %>
  <div>
    <%= f.label :Title %></br>
    <%= f.text_field :title %>
  </div>
  <div>
     <%= f.label :Opinion %></br>
    <%= f.text_field :body %>
  </div>
  <div>
    <%= f.submit 'Update Book' %>
  </div>
  <div>
    <%= link_to 'show', book_path(@book) %>|
    <%= link_to 'back', books_path %>
  </div>
<% end %>