<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %> 
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model:@book do |f| %>
  <div>
    <%= f.label :Title %></br>
    <%= f.text_field :title %>
  </div>
  <div>
     <%= f.label :Opinion %></br>
    <%= f.text_field :body %>
  </div>
  <div>
    <%= f.submit 'Update Book' %>
  </div>
  <div>
    <%= link_to 'show', book_path(@book) %>|
    <%= link_to 'back', books_path %>
  </div>
<% end %>